{
  "expo": {
    "name": "Norya",
    "slug": "norya-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "norya",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0a1929"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.norya.mobile"
    },
    "android": {
      "backgroundColor": "#0a1929",
      "package": "com.norya.mobile"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Tahlil fotoğrafı seçmek için galeri erişimi.",
          "cameraPermission": "Tahlil kağıdı fotoğraflamak için kamera erişimi."
        }
      ]
    ]
  }
}
