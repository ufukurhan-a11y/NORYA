# Norya Nginx reverse proxy (HTTP; SSL certbot ile eklenir)
# KullanÄ±m: sudo cp deploy/nginx-norya.conf.example /etc/nginx/sites-available/norya
#          sudo ln -s /etc/nginx/sites-available/norya /etc/nginx/sites-enabled/
#          sudo nginx -t && sudo systemctl reload nginx
# SSL:     sudo certbot --nginx -d norya.example.com

server {
    listen 80;
    server_name norya.example.com;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
